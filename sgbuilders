    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
        
        // Tracking form functionality
        document.addEventListener('DOMContentLoaded', function() {
            const trackProjectBtn = document.getElementById('trackProjectBtn');
            const trackingResults = document.getElementById('trackingResults');
            const noResults = document.getElementById('noResults');
            
            // Hide both sections initially
            trackingResults.classList.add('hidden');
            noResults.classList.add('hidden');

            trackProjectBtn.addEventListener('click', (e) => {
                e.preventDefault();
                const projectId = document.getElementById('projectId').value.trim();
                const clientEmail = document.getElementById('clientEmail').value.trim();
                
                // Simple validation - in real app would call API
                if (projectId && clientEmail.includes('@')) {
                    trackingResults.classList.remove('hidden');
                    noResults.classList.add('hidden');
                    
                    // Update progress bar with animation
                    const progressBar = document.getElementById('progressBar');
                    progressBar.style.transition = 'width 1s ease-in-out';
                    progressBar.style.width = '42%';

                    // Populate sample project data (would come from API in real app)
                    document.getElementById('projectName').textContent = 'Azure Sands Resort - Phase 2';
                    document.getElementById('projectLocation').textContent = 'Malibu Beach, CA';
                    document.getElementById('projectStartDate').textContent = '15 March 2023';
                    document.getElementById('projectEndDate').textContent = '30 November 2024';
                    document.getElementById('projectProgress').textContent = '42%';
                } else {
                    trackingResults.classList.add('hidden');
                    noResults.classList.remove('hidden');
                    alert('Please enter valid Project ID and Email address');
                }
            });
        });
        
        // Counter animation for stats
        const counters = document.querySelectorAll('.counter');
        const speed = 200;
        
        function animateCounters() {
            counters.forEach(counter => {
                const target = +counter.getAttribute('data-target');
                const count = +counter.innerText;
                const increment = target / speed;
                
                if (count < target) {
                    counter.innerText = Math.ceil(count + increment);
                    setTimeout(animateCounters, 1);
                } else {
                    counter.innerText = target;
                }
            });
        }
        
        // Check when to start counting
        const statsSection = document.querySelector('.bg-gray-900');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    animateCounters();
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });
        
        observer.observe(statsSection);
        

        // Admin functionality
        document.addEventListener('DOMContentLoaded', function() {
            const adminLoginBtn = document.getElementById('adminLoginBtn') || document.getElementById('adminLoginBtnMobile');
            if (!adminLoginBtn) return;
            
            const adminModal = document.getElementById('adminModal');
            const adminForm = document.getElementById('adminForm');
            const adminFeatures = document.getElementById('adminFeatures');
            const cancelAdminLogin = document.getElementById('cancelAdminLogin');
            
            adminLoginBtn.addEventListener('click', () => {
                adminModal.classList.remove('hidden');
                adminFeatures.classList.add('hidden');
                setTimeout(() => {
                    adminModal.querySelector('.transform').classList.remove('scale-95', 'opacity-0');
                }, 10);
            });
            
            cancelAdminLogin.addEventListener('click', () => {
                adminModal.classList.add('hidden');
                adminForm.reset();
            });
            
            adminForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const password = document.getElementById('password').value;
                
                if (password.trim() === 'Ayush@3087') {
                    adminFeatures.classList.remove('hidden');
                } else {
                    alert('Incorrect password! Please try again.');
                    document.getElementById('password').value = '';
                    document.getElementById('password').focus();
                }
            });
        });
        
        // Admin dashboard functions
        function updateHero() {
            const heading = document.getElementById('heroHeading').value;
            const subheading = document.getElementById('heroSubHeading').value;
            
            document.getElementById('heroHeadingDisplay').textContent = heading;
            document.getElementById('heroSubHeadingDisplay').textContent = subheading;
            
            alert('Hero section updated successfully!');
            document.getElementById('heroHeading').value = '';
            document.getElementById('heroSubHeading').value = '';
        }
        
        function addProject() {
            const projectName = document.getElementById('newProject').value;
            if (projectName) {
                alert(`New project "${projectName}" added!`);
                document.getElementById('newProject').value = '';
            } else {
                alert('Please enter a project name');
            }
        }
        
        function updateHeroImage() {
            const newImageUrl = document.getElementById('heroImageUrl').value;
            if (newImageUrl) {
                document.querySelector('.hero').style.backgroundImage = `linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('${newImageUrl}')`;
                alert('Hero background image updated!');
                document.getElementById('heroImageUrl').value = '';
            } else {
                alert('Please enter an image URL');
            }
        }

        function updateProjectImage() {
            const imageUrl = document.getElementById('projectImageUrl').value;
            const index = document.getElementById('projectImageIndex').value;
            
            if (imageUrl && (index === '1' || index === '2' || index === '3')) {
                const projectCards = document.querySelectorAll('.project-card img');
                projectCards[index-1].src = imageUrl;
                alert(`Project ${index} image updated!`);
                document.getElementById('projectImageUrl').value = '';
                document.getElementById('projectImageIndex').value = '';
            } else {
                alert('Please enter valid URL and index (1-3)');
            }
        }

        function deleteProject() {
            const index = document.getElementById('deleteProjectIndex').value;
            const projectCards = document.querySelectorAll('.project-card');
            
            if (index === '1' || index === '2' || index === '3') {
                if (confirm(`Are you sure you want to delete project ${index}?`)) {
                    projectCards[index-1].remove();
                    alert(`Project ${index} deleted!`);
                    document.getElementById('deleteProjectIndex').value = '';
                }
            } else {
                alert('Please enter valid project index (1-3)');
            }
        }

        // Function to fetch and display inquiries
        function fetchInquiries() {
            // For demo - in a real app this would be an API call
            const demoInquiries = JSON.parse(localStorage.getItem('contactFormSubmissions')) || [];
            
            const inquiriesList = document.getElementById('inquiriesList');
            inquiriesList.innerHTML = '';

            if (demoInquiries.length === 0) {
                inquiriesList.innerHTML = '<p class="text-gray-600">No inquiries found.</p>';
                return;
            }

            demoInquiries.forEach((inquiry, index) => {
                const inquiryDiv = document.createElement('div');
                inquiryDiv.className = 'bg-white p-3 rounded mb-2 shadow-sm';
                inquiryDiv.innerHTML = `
                    <p><strong>Name:</strong> ${inquiry.from_name}</p>
                    <p><strong>Email:</strong> ${inquiry.from_email}</p>
                    <p><strong>Phone:</strong> ${inquiry.phone}</p>
                    <p><strong>Project:</strong> ${inquiry.project_type}</p>
                    <p class="mt-1"><strong>Message:</strong> ${inquiry.message}</p>
                    <p class="text-sm text-gray-500 mt-1">${new Date().toLocaleString()}</p>
                    <button onclick="deleteInquiry(${index})" class="mt-2 text-red-600 hover:text-red-800 text-sm">
                        <i class="fas fa-trash mr-1"></i> Delete
                    </button>
                `;
                inquiriesList.appendChild(inquiryDiv);
            });
        }

        function deleteInquiry(index) {
            if (confirm('Are you sure you want to delete this inquiry?')) {
                const inquiries = JSON.parse(localStorage.getItem('contactFormSubmissions')) || [];
                inquiries.splice(index, 1);
                localStorage.setItem('contactFormSubmissions', JSON.stringify(inquiries));
                fetchInquiries();
            }
        }

        function addTestimonial() {
            const clientName = document.getElementById('clientName').value;
            const testimonial = document.getElementById('clientTestimonial').value;
            
            if (clientName && testimonial) {
                alert(`New testimonial from ${clientName} added!`);
                document.getElementById('clientName').value = '';
                document.getElementById('clientTestimonial').value = '';
            } else {
                alert('Please fill all fields');
            }
        }

        // Modify the contact form submission to save inquiries
        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // ... existing validation code ...

            // Save to localStorage (in a real app this would be an API call)
            const inquiries = JSON.parse(localStorage.getItem('contactFormSubmissions')) || [];
            inquiries.push({
                from_name: `${document.getElementById('firstName').value} ${document.getElementById('lastName').value}`,
                from_email: document.getElementById('email').value,
                phone: document.getElementById('phone').value,
                project_type: document.getElementById('projectType').value,
                message: document.getElementById('message').value,
                date: new Date().toISOString()
            });
            localStorage.setItem('contactFormSubmissions', JSON.stringify(inquiries));

            // ... rest of existing submission code ...
        });
        
        // Admin dashboard functions
        function updateHero() {
            const heading = document.getElementById('heroHeading').value;
            const subheading = document.getElementById('heroSubHeading').value;
            
            document.getElementById('heroHeadingDisplay').textContent = heading;
            document.getElementById('heroSubHeadingDisplay').textContent = subheading;
            
            alert('Hero section updated successfully!');
        }
        
        function addProject() {
            const projectName = document.getElementById('newProject').value;
            if (projectName) {
                alert(`New project "${projectName}" added!`);
                document.getElementById('newProject').value = '';
            } else {
                alert('Please enter a project name');
            }
        }
        
        function addTestimonial() {
            const clientName = document.getElementById('clientName').value;
            const testimonial = document.getElementById('clientTestimonial').value;
            
            if (clientName && testimonial) {
                alert(`New testimonial from ${clientName} added!`);
                document.getElementById('clientName').value = '';
                document.getElementById('clientTestimonial').value = '';
            } else {
                alert('Please fill all fields');
            }
        }
        
        // Fade-in animation when scrolling
        const fadeElements = document.querySelectorAll('.fade-in');
        
        const fadeObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('opacity-100');
                    fadeObserver.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        
        fadeElements.forEach(element => {
            element.classList.add('opacity-0', 'transition-opacity', 'duration-700');
            fadeObserver.observe(element);
        });
        
        // View more testimonials
        const viewMoreBtn = document.getElementById('viewMoreTestimonials');
        
        viewMoreBtn.addEventListener('click', () => {
            alert('Loading more testimonials...');
        });
        
        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                }
            });
        });
    </script>

    <!-- EmailJS Integration -->
    <script>
        // Initialize EmailJS with your user ID
        (function() {
            emailjs.init('1lDd0F1-zV-2bWnHw'); // Replace with your actual EmailJS user ID
        })();

        document.getElementById('contactForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Form validation
            const form = event.target;
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;

            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.classList.add('border-red-500');
                    isValid = false;
                } else {
                    field.classList.remove('border-red-500');
                }
            });

            if (!isValid) {
                alert('Please fill in all required fields');
                return;
            }

            const submitBtn = form.querySelector('button[type="submit"]');
            const originalBtnText = submitBtn.textContent;
            
            // Change button text to loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = `
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Sending...
            `;

            // Prepare the email parameters
            const templateParams = {
                from_name: `${document.getElementById('firstName').value} ${document.getElementById('lastName').value}`,
                from_email: document.getElementById('email').value,
                phone: document.getElementById('phone').value,
                project_type: document.getElementById('projectType').value,
                message: document.getElementById('message').value
            };

            // Send the email using EmailJS
            emailjs.send('service_4a74wg4', 'template_ff0n7h7', templateParams)
                .then(function(response) {
                    // Show success message
                    const successDiv = document.createElement('div');
                    successDiv.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4';
                    successDiv.innerHTML = `
                        <strong class="font-bold">Success! </strong>
                        <span class="block sm:inline">Your message has been sent. We'll contact you soon.</span>
                    `;
                    form.insertBefore(successDiv, form.firstChild);
                    form.reset();
                    
                    // Remove success message after 5 seconds
                    setTimeout(() => {
                        successDiv.remove();
                    }, 5000);
                }, function(error) {
                    // Show error message
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4';
                    errorDiv.innerHTML = `
                        <strong class="font-bold">SUCCESS! </strong>
                        <span class="block sm:inline">Message sent successfully, you can also contact us directly at sgbuildersbikaner.2012@gmail.com</span>
                    `;
                    form.insertBefore(errorDiv, form.firstChild);
                    
                    console.error('EmailJS Error:', error);
                })
                .finally(function() {
                    // Reset button to original state
                    submitBtn.disabled = false;
                    submitBtn.textContent = originalBtnText;
                });
        });
    </script>

